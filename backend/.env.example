# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here

# JWT Configuration (generate with: python generate_secret_key.py)
JWT_SECRET_KEY=your-jwt-secret-key-here

# --- Database: Choose ONE option ---

# Option A: Supabase (recommended for production)
# Get from: Supabase Dashboard → Project Settings → Database → Connection string (URI)
# Use the "Transaction" pooler for connection pooling (port 6543)
DATABASE_URL=postgresql://postgres.[project-ref]:[YOUR-PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# Option B: Local PostgreSQL (comment out DATABASE_URL if using this)
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=your_db_name

# Token Expiration (in seconds)
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# CORS Configuration (comma-separated)
CORS_ORIGINS=http://localhost:3000

# AI Configuration (Google Gemini)
GOOGLE_API_KEY=your-google-api-key
ENABLE_AI_FEATURES=true
AI_MODEL_NAME=gemini-2.0-flash
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=16384

# AWS (for S3 storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your-bucket-name
