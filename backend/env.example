# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=generate-with-generate_secret_key.py

# JWT Configuration
# Generate with: python generate_secret_key.py
JWT_SECRET_KEY=generate-with-generate_secret_key.py

# Database Configuration
DB_USER=causalytics_user
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=causalytics_db

# Token Expiration (in seconds)
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# CORS Configuration (comma-separated)
CORS_ORIGINS=http://localhost:3000

# AI Configuration (Google Gemini)
GOOGLE_API_KEY=your_google_api_key_here
ENABLE_AI_FEATURES=true
AI_MODEL_NAME=gemini-1.5-flash
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=16384 # Default for longer responses

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/causalytics.log

# Rate Limiting Configuration
RATE_LIMIT_DEFAULT=200 per day, 50 per hour
REDIS_URL=redis://localhost:6379/0  # Use 'memory://' for in-memory storage
